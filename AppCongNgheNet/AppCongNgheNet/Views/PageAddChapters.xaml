<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCongNgheNet.Views.PageAddChapters">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="10">
            <StackLayout Orientation="Horizontal" Padding="5">
                <Label Text="Chương số: "></Label>
                <Entry Placeholder="Nhập thứ tự chương ..."></Entry>
            </StackLayout>
            <StackLayout Orientation="Horizontal" Padding="5">
                <Label Text="Tên chương: "></Label>
                <Entry Placeholder="Nhập tên chương ..."></Entry>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>