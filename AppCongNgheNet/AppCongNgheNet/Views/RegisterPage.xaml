<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCongNgheNet.Views.RegisterPage" Title="Đăng ký">
    <ContentPage.Content>
        <StackLayout Padding="40" HorizontalOptions="FillAndExpand" VerticalOptions="Center">
            <Image Source="IconLog.png" HeightRequest="180" WidthRequest="180"/>

            <Entry x:Name="txtUsername" Placeholder="Tài khoản" TextColor="White" PlaceholderColor="Gray"></Entry>
            <Entry x:Name="txtPassword" Placeholder="Mật khẩu" IsPassword="True" TextColor="White" PlaceholderColor="Gray"></Entry>
            <Entry x:Name="txtPasswordConfirm" Placeholder="Xác nhận lại mật khẩu" IsPassword="True" TextColor="White" PlaceholderColor="Gray"></Entry>
            <Button
                VerticalOptions="Center"
                Text="Đăng ký"
                TextColor="White"
                BackgroundColor="Transparent"
                BorderColor="Pink"
                BorderWidth="1.5"
                CornerRadius="50"
                Clicked="Button_Register"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>